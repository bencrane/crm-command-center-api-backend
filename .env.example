# App
APP_NAME="CRM Config API"
DEBUG=true

# Database (Supabase PostgreSQL - use asyncpg driver)
DATABASE_URL="postgresql+asyncpg://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres"

# CORS (JSON list of allowed origins)
CORS_ORIGINS=["http://localhost:3000"]

# Salesforce OAuth (from Salesforce Connected App)
SALESFORCE_CLIENT_ID="your-salesforce-client-id"
SALESFORCE_CLIENT_SECRET="your-salesforce-client-secret"
SALESFORCE_REDIRECT_URI="http://localhost:8000/auth/salesforce/callback"

# Fernet encryption key for token storage
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY="your-fernet-key"

# App secret for state signing
APP_SECRET="generate-a-random-secret-here"
